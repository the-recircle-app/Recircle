# ReCircle Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================

# Application Environment
NODE_ENV=development
PORT=5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/recircle_db

# ===========================================
# BLOCKCHAIN INTEGRATION
# ===========================================

# VeBetterDAO Application Registration
APP_ID=0x1234
# Get this by registering your app via Remix (see docs/RegisterViaRemix.md)

# VeBetterDAO Wallet Addresses (for token distribution)
REWARD_DISTRIBUTOR_WALLET=0x1234567890abcdef1234567890abcdef12345678
APP_FUND_WALLET=0xabcdef1234567890abcdef1234567890abcdef12
CREATOR_FUND_WALLET=0xfedcba0987654321fedcba0987654321fedcba09

# VeChain Network Configuration
VECHAIN_NETWORK=mainnet
# Use 'testnet' for development, 'mainnet' for production

# ===========================================
# AI & MACHINE LEARNING
# ===========================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview
# Required for receipt validation and AI analysis

# ===========================================
# GOOGLE SERVICES INTEGRATION
# ===========================================

# Google Sheets API (for manual review logging)
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Google Apps Script Webhook URLs
RECEIPT_APPROVAL_WEBHOOK_URL=https://script.google.com/macros/s/your-script-id/exec
STORE_APPROVAL_WEBHOOK_URL=https://script.google.com/macros/s/your-store-script-id/exec

# ===========================================
# EXTERNAL API INTEGRATIONS
# ===========================================

# Transportation API Keys (for future integrations)
UBER_API_KEY=your-uber-api-key-here
LYFT_API_KEY=your-lyft-api-key-here

# Store Integration APIs
GOODWILL_API_KEY=your-goodwill-api-key-here
SALVATION_ARMY_API_KEY=your-salvation-army-api-key-here

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================

# JWT Secret for session management
JWT_SECRET=your-super-secure-random-string-here

# Session Secret
SESSION_SECRET=another-super-secure-random-string

# Encryption Keys
ENCRYPTION_KEY=32-character-encryption-key-here

# ===========================================
# EMAIL & NOTIFICATIONS
# ===========================================

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Settings
ADMIN_EMAIL=admin@recircleapp.com
SUPPORT_EMAIL=support@recircleapp.com

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Development Mode Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Test Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/recircle_test
TEST_OPENAI_API_KEY=your-test-openai-key

# Mock Data Settings (development only)
USE_MOCK_DATA=false
MOCK_RECEIPTS_ENABLED=false

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# Production URLs
FRONTEND_URL=https://recircle.app
BACKEND_URL=https://api.recircle.app

# CDN Configuration
CDN_URL=https://cdn.recircle.app
ASSETS_URL=https://assets.recircle.app

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================

# API Rate Limits
API_RATE_LIMIT=1000
API_WINDOW_MINUTES=15

# Security Headers
CORS_ORIGIN=https://recircle.app
ALLOWED_HOSTS=recircle.app,www.recircle.app

# ===========================================
# FEATURE FLAGS
# ===========================================

# Feature Toggles
ENABLE_TRANSPORTATION_REWARDS=true
ENABLE_STORE_PARTNERSHIPS=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_BETA_FEATURES=false

# Regional Features
ENABLE_MULTI_LANGUAGE=false
ENABLE_CURRENCY_CONVERSION=false

# ===========================================
# BLOCKCHAIN SPECIFIC SETTINGS
# ===========================================

# Smart Contract Addresses
VEBETTERDAO_CONTRACT_ADDRESS=0xcontract-address-here
B3TR_TOKEN_CONTRACT=0xb3tr-token-contract-address

# Gas Settings
GAS_PRICE=10000000000
GAS_LIMIT=500000

# Transaction Settings
MAX_RETRY_ATTEMPTS=3
TRANSACTION_TIMEOUT=30000

# ===========================================
# BACKUP & RECOVERY
# ===========================================

# Database Backup
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups/recircle

# File Storage
UPLOADS_PATH=/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Levels
LOG_LEVEL=info
ERROR_LOG_PATH=/logs/error.log
ACCESS_LOG_PATH=/logs/access.log

# Log Rotation
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHING=true

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# Payment Processing (future use)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=recircle-uploads
AWS_REGION=us-east-1

# ===========================================
# MOBILE APP CONFIGURATION
# ===========================================

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Deep Linking
ANDROID_PACKAGE_NAME=com.recircle.app
IOS_BUNDLE_ID=com.recircle.app