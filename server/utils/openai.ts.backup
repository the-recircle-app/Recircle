                          lowerName.includes('pre-owned') || 
                          lowerName.includes('preowned') || 
                          lowerName.includes('refurbished');
      
      log(`Creating fallback analysis for ${isUsedGames ? 'used' : 'new'} games receipt based on filename`, 'openai');
      
      // Create base result
